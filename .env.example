# Seller Opportunity Scanner - API Credentials
# Copy this file to ~/.seller-opportunity-scanner/.env and fill in your values

# Keepa API Key
SOS_KEEPA_API_KEY=your_keepa_api_key_here

# Amazon SP-API credentials
SOS_SPAPI_REFRESH_TOKEN=your_refresh_token_here
SOS_SPAPI_CLIENT_ID=your_client_id_here
SOS_SPAPI_CLIENT_SECRET=your_client_secret_here
SOS_SPAPI_AWS_ACCESS_KEY=your_aws_access_key_here
SOS_SPAPI_AWS_SECRET_KEY=your_aws_secret_key_here
SOS_SPAPI_ROLE_ARN=arn:aws:iam::123456789:role/your-role

# Set to true to use mock data (for testing without API credentials)
SOS_MOCK_MODE=false
